<h1>Predictions</h1>
<br>
<table class="table table-striped table-bordered table-hover">
  <thead class="table-warning">
    <tr>
      <th>Name</th>
      <th>Prediction</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @predictions.each do |prediction| %>
      <tr>
        <td><%= prediction.name %></td>
        <td><%= prediction.prediction %></td>
        <td><%= link_to 'Show', prediction %></td>
        <td><%= link_to 'Edit', edit_prediction_path(prediction) %></td>
        <td><%= link_to 'Destroy', prediction, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Prediction', new_prediction_path, class:"btn btn-warning" %>
