<h1>Predictions</h1>
<br>
<table class="table table-striped table-bordered table-hover">
  <thead class="table-warning">
    <tr>
      <th>Name</th>
      <th>Prediction</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @predictions.each do |prediction| %>
      <tr>
        <td><%= prediction.name %></td>
        <td><%= prediction.prediction %></td>
        <td><%= link_to 'Edit', edit_prediction_path(prediction), class:"btn btn-outline-warning btn-sm" %></td>
        <td><%= link_to 'Delete', prediction, method: :delete, data: { confirm: "Are you sure? Let's wait to see if it comes true!" }, class:"btn btn-outline-danger btn-sm" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Prediction', new_prediction_path, class:"btn btn-warning" %>
